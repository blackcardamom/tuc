<%- include('header') -%>
<div class="filter_holder">
	<div class="multicheck">
		<span class="multicheck_title" id="multicheck_title_tags">Tags</span>
		<div class="multicheck_toggle"><img src="/assets/down.svg"></div>
		<div class="multicheck_overlay"></div>
		<div class="multicheck_contents" id="tagList"></div>
	</div>
	<div class="search_box">
		<input type="text" id="search_box" name="search_box" placeholder="Search...">
	</div>
</div>
<div class="spaced animated divider">
	<div class="divider_arm"></div>
	<h2>Search Results</h2>
	<div class="divider_arm"></div>
</div>
<div class="recipe_card_grid">
	<% for (var id in directories.recipe) { %>
		<% if( directories.recipe[id].featured) { %>
			<%- include('recipe_card', directories.recipe[id]) -%>
		<% } %>
	<% } %>
</div>
<script src="https://cdn.jsdelivr.net/npm/fuse.js@6.0.0"></script>
<script type="text/javascript" src="app/search.js"></script>
<script type="text/javascript" src="app/multicheck.js"></script>
<%- include('footer') -%>
