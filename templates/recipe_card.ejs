<%
	var short_desc = "";
	var desc_length = 0;
	splitDesc = description.split(" ");
	splitDesc.forEach( function(word) {
		if(word.length + desc_length <= 96) {
			short_desc += word + " ";
			desc_length += word.length;
		}
	});
	short_desc += "..."
%>
<div class="recipe_card" id="<%=link %>">
	<div class="recipe_card_img_holder">
		<a href="<%= link %>"><img src="<%= card_photo %>"></a>
	</div>
	<div class="recipe_card_text_holder">
		<h3><a href="<%= link %>"><%= title %></a></h3>
		<span class="long_description"><%= description %></span>
		<span class="short_description"><%= short_desc %></span>
	</div>
</div>
